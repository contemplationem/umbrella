# ensure SSH is installed
sudo apt install ssh

# enable root login over SSH
sudo sed -i 's/#PermitRoot/PermitRoot/' /etc/ssh/ssh_config

# restart SSH
service ssh restart

# paste status of SSH
sudo systemctl status sshd

# get the process ID of the request for SSH status
PID=$!
# wait for 2 seconds
sleep 2
# then kill it
kill $PID
